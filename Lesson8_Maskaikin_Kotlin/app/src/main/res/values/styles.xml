<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mango_two</item>
        <item name="colorPrimaryDark">@color/mango</item>
        <item name="colorAccent">@color/mango_two</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/white_four</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/black</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:textColorPrimary">@color/black_87</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/mango_two</item>
    </style>

    <style name="AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="RecyclerViewNotes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="ProgressBarActivityMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewNotesSqlEmpty" parent="TextView">
        <item name="android:visibility">gone</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/mango_two</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FabAddNote">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:ems">10</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="EditTextAddTitleNote" parent="EditText">
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/warm_grey_four</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EditTextAddTextNote" parent="EditText">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textColor">@color/black_54</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewTitleNote" parent="TextView">
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="TextViewTextNote" parent="TextView">
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CardViewForNote">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="contentPaddingBottom">19dp</item>
        <item name="contentPaddingTop">21dp</item>
        <item name="contentPaddingLeft">18dp</item>
        <item name="contentPaddingRight">14dp</item>
    </style>

</resources>
