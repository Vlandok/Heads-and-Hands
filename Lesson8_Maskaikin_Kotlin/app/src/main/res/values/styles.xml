<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mango_two</item>
        <item name="colorPrimaryDark">@color/mango</item>
        <item name="colorAccent">@color/mango_two</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/white_four</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/black</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:textColorPrimary">@color/black_87</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/mango_two</item>
    </style>

    <style name="AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

</resources>
