<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutForNote"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewForNote"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground">

        <LinearLayout
            android:id="@+id/linearLayoutForNoteInCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@color/turquoise_blue"
            android:paddingTop="21dp"
            android:paddingBottom="19dp"
            android:paddingEnd="14dp"
            android:paddingStart="18dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTitleNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="8sp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"
                android:textStyle="normal"
                tools:text="Купить батон" />

            <TextView
                android:id="@+id/textViewTextNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="normal"
                tools:text="Hey let’s catch up soon. Do you want to grab lunch sometime this weekend? Let me know when you’re free! " />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
