<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white_two</item>
        <item name="colorPrimaryDark">@color/silver</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/white_three</item>
        <item name="colorAccent">@color/silver</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:background">@color/white_two</item>
    </style>

    <style name="TextViewFragment1And2" parent="TextView">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:colorBackground">#cc0000</item>
    </style>

    <style name="ImageViewFragment3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:contentDescription">@string/banner</item>
    </style>

    <style name="TextViewFragment3" parent="TextView">
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewClickFragment3" parent="TextView">
        <item name="android:layout_width">166dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">90dp</item>
        <item name="android:background">@drawable/background_color_button_fragment_3</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#dfffffff</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewDrawerHeader" parent="TextView">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">68dp</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NavigationView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/white_two</item>
    </style>

    <style name="FrameLayoutAcitivityMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="LinerLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CircleIndicator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>

</resources>
