<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/weird_green</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/weird_green</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Picker">
        <item name="android:textColorPrimary">@color/black_87</item>
        <item name="colorAccent">@color/weird_green</item>
        <item name="android:windowBackground">@color/charcoal_grey_29</item>
    </style>

    <style name="Toolbar">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:background">@color/weird_green</item>
    </style>

    <style name="AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

</resources>
